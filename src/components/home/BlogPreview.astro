---
import { Button } from "../common/Button";
import { Container } from "../common/Container";

interface Props {
	title: string;
	subtitle?: string | null;
	limit?: number | null;
}

const { title, subtitle, limit = 3 } = Astro.props;

// Mock blog data for now, eventually this should also fetch from Strapi if `populate: 'blog_posts'` was set up
const mockPosts = [
	{
		title: "10 Ways to Build a Fort",
		excerpt: "Get instant inspiration with these creative build ideas.",
		date: "Dec 12, 2025",
		category: "Play Ideas",
	},
	{
		title: "Why Open-Ended Play Matters",
		excerpt: "Discover the developmental benefits of unstructured play.",
		date: "Nov 28, 2025",
		category: "Parenting",
	},
	{
		title: "Care Guide: Keeping Your Sofa Fresh",
		excerpt: "Simple tips to clean spills and keep covers looking new.",
		date: "Nov 15, 2025",
		category: "Guides",
	},
];
---

<section class="py-20 bg-secondary/10">
    <Container>
        <div
            class="flex flex-col md:flex-row md:items-end justify-between mb-12 gap-6"
        >
            <div class="max-w-2xl">
                <h2
                    class="text-3xl md:text-4xl font-bold font-heading text-primary mb-4"
                >
                    {title}
                </h2>
                {subtitle && <p class="text-xl text-text-muted">{subtitle}</p>}
            </div>
            <div>
                <Button href="/blog" variant="outline">View All Posts</Button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                mockPosts.slice(0, limit || 3).map((post) => (
                    <a
                        href="/blog/post-slug"
                        class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300 flex flex-col h-full border border-gray-100"
                    >
                        <div class="aspect-[4/3] bg-gray-200 relative">
                            {/* Image placeholder */}
                            <div class="absolute inset-0 flex items-center justify-center text-gray-400 font-mono text-sm">
                                Blog Cover Image
                            </div>
                        </div>
                        <div class="p-6 flex flex-col flex-grow">
                            <div class="text-xs font-bold text-primary tracking-wider uppercase mb-2">
                                {post.category}
                            </div>
                            <h3 class="text-xl font-bold text-text-main mb-3 group-hover:text-primary transition-colors">
                                {post.title}
                            </h3>
                            <p class="text-text-muted mb-4 line-clamp-3 flex-grow">
                                {post.excerpt}
                            </p>
                            <div class="text-sm text-gray-400 font-medium">
                                {post.date}
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>
    </Container>
</section>
