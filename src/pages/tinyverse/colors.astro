---
import { Container } from "../../components/common/Container";
import Layout from "../../layouts/Layout.astro";

const colors = [
	{
		name: "Cosmic Blue",
		hex: "#1e3a8a",
		description: "Deep, calming, and infinite like the night sky.",
	},
	{
		name: "Nebula Pink",
		hex: "#db2777",
		description: "Vibrant, playful, and full of energy.",
	},
	{
		name: "Stardust Gray",
		hex: "#9ca3af",
		description: "Neutral, modern, and fits in any room.",
	},
	{
		name: "Comet Teal",
		hex: "#14b8a6",
		description: "Fresh, bright, and adventurous.",
	},
];
---

<Layout title="Our Colors - Tiny Explorer">
    <div class="bg-secondary/20 min-h-screen py-20">
        <Container>
            <div class="max-w-3xl mx-auto text-center mb-16">
                <h1
                    class="text-4xl md:text-5xl font-bold font-heading text-primary mb-6"
                >
                    Our Colors
                </h1>
                <p class="text-xl text-text-muted">
                    Inspired by the universe, designed for your home.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    colors.map((color) => (
                        <div class="bg-white p-4 rounded-2xl shadow-sm hover:shadow-md transition-shadow">
                            <div
                                class="aspect-square rounded-xl mb-4"
                                style={`background-color: ${color.hex}`}
                            />
                            <h3 class="text-xl font-bold font-heading text-text-main mb-2">
                                {color.name}
                            </h3>
                            <p class="text-sm text-text-muted">
                                {color.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </Container>
    </div>
</Layout>
