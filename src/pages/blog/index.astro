---
import { getCollection } from "astro:content";
import { Container } from "../../components/common/Container";
import Layout from "../../layouts/Layout.astro";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
	(a, b) =>
		new Date(b.data.publishedAt || 0).getTime() -
		new Date(a.data.publishedAt || 0).getTime(),
);
---

<Layout title="Blog - Tiny Explorer">
  <div class="py-20 bg-background min-h-screen">
    <Container>
      <div class="text-center mb-16">
        <h1
          class="text-4xl md:text-5xl font-bold font-heading text-primary mb-6"
        >
          Tiny Explorer Blog
        </h1>
        <p class="text-xl text-text-muted">
          Stories, tips, and inspiration for creative families.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          sortedPosts.map((post) => (
            <a
              href={`/blog/${post.data.slug}`}
              class="group flex flex-col bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-all h-full"
            >
              <div class="aspect-video bg-gray-200 relative overflow-hidden">
                {post.data.cover?.url ? (
                  <img
                    src={post.data.cover.url}
                    alt={post.data.cover.alternativeText || post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                ) : (
                  <div class="absolute inset-0 flex items-center justify-center text-text-muted opacity-50 font-medium bg-secondary/10">
                    Tiny Explorer
                  </div>
                )}
              </div>

              <div class="p-6 flex flex-col flex-grow">
                <div class="flex items-center gap-2 text-sm text-primary font-medium mb-3">
                  {post.data.category?.name && (
                    <span class="bg-secondary/10 px-2 py-1 rounded-md">
                      {post.data.category.name}
                    </span>
                  )}
                  {post.data.publishedAt && (
                    <span class="text-text-muted">
                      • {new Date(post.data.publishedAt).toLocaleDateString()}
                    </span>
                  )}
                </div>

                <h2 class="text-xl font-bold font-heading text-text-main mb-2 group-hover:text-primary transition-colors">
                  {post.data.title}
                </h2>

                <p class="text-text-muted line-clamp-3 mb-4 flex-grow">
                  {post.data.description}
                </p>

                <div class="text-primary font-bold text-sm mt-auto flex items-center">
                  Read Article{" "}
                  <span class="ml-1 group-hover:translate-x-1 transition-transform">
                    →
                  </span>
                </div>
              </div>
            </a>
          ))
        }

        {
          sortedPosts.length === 0 && (
            <div class="col-span-full text-center py-20 text-text-muted">
              <p>No articles found. Check back soon!</p>
            </div>
          )
        }
      </div>
    </Container>
  </div>
</Layout>
