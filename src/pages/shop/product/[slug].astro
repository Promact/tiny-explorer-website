---
import Layout from "../../../layouts/Layout.astro";
import { Container } from "../../../components/common/Container";
import { Button } from "../../../components/common/Button";
import { AddToCart } from "../../../components/cart/AddToCart";
import { medusa } from "../../../lib/medusa";

export async function getStaticPaths() {
  let products: any[] = [];
  try {
    const res = await medusa.store.product.list({
      fields: "+variants,+variants.prices,+collection",
    });
    products = res.products;
  } catch (e) {
    console.error("Failed to fetch products for paths", e);
  }

  return products.map((product) => ({
    params: { slug: product.handle },
    props: { product },
  }));
}

const { product } = Astro.props;

// Helper to format price
const getPrice = (p: any) => {
  const variants = p.variants as any[];
  const amount = variants?.[0]?.prices?.[0]?.amount || 0;
  return amount / 100;
};

const price = getPrice(product);
const features = (product.metadata?.features as string[]) || [
  "Premium Quality",
  "Sustainable Materials",
  "Handcrafted",
];
---

<Layout title={`${product.title} - Tiny Explorer`}>
  <div class="py-12 bg-white">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
        {/* Gallery Section */}
        <div class="space-y-4">
          <div
            class="aspect-square bg-gray-100 rounded-2xl overflow-hidden relative border border-gray-100"
          >
            {
              product.thumbnail ? (
                <img
                  src={product.thumbnail}
                  alt={product.title}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center bg-secondary/20 text-text-muted">
                  <span class="text-lg font-medium">
                    Image for {product.title}
                  </span>
                </div>
              )
            }
          </div>
          {/* Placeholder for additional images if available */}
          <div class="grid grid-cols-4 gap-4">
            {
              [1, 2, 3, 4].map((i) => (
                <div class="aspect-square bg-gray-50 rounded-lg cursor-pointer hover:border-primary border-2 border-transparent transition-all" />
              ))
            }
          </div>
        </div>

        {/* Details Section */}
        <div class="flex flex-col h-full">
          <div class="mb-2">
            <span
              class="text-primary font-medium tracking-wide uppercase text-sm"
              >{product.collection?.title || "Shop"}</span
            >
          </div>
          <h1
            class="text-4xl md:text-5xl font-bold font-heading text-text-main mb-6"
          >
            {product.title}
          </h1>
          <p class="text-2xl font-medium text-text-main mb-8">
            ₹{price.toLocaleString("en-IN")}
          </p>

          <div class="prose prose-lg text-text-muted mb-8">
            <p>{product.description}</p>
          </div>

          <div class="space-y-4 mb-10">
            <h3 class="font-bold text-text-main">Key Features:</h3>
            <ul class="space-y-2">
              {
                features.map((feature) => (
                  <li class="flex items-center text-text-muted">
                    <svg
                      class="w-5 h-5 text-green-500 mr-2"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    {feature}
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="mt-auto pt-8 border-t border-gray-100">
            <div class="flex flex-col gap-4">
              <AddToCart client:load variants={product.variants} />

              {/* Other buttons or info */}
            </div>
            <p class="text-sm text-text-muted mt-4 text-center">
              Free shipping on orders over ₹2000. Easy 30-day returns.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </div>
</Layout>
